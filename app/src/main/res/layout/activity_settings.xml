<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorBackground"
    tools:context=".Activities.UserQrActivity"
    tools:ignore="UseSwitchCompatOrMaterialXml">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_settings"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/CustomToolbarStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/standard_page_padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Wybór motywu"
            android:textSize="@dimen/huge_btn_text_size"
            android:textColor="?attr/text_normal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--TODO: Mateusz select theme btns-->
            <View
                android:id="@+id/set_theme0_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/theme0_choice_gradient"
                android:layout_marginEnd="20dp"/>

            <View
                android:id="@+id/set_theme1_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/theme1_choice_gradient"
                android:layout_marginEnd="20dp"/>

            <View
                android:id="@+id/set_theme2_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/theme2_choice_gradient"
                android:layout_marginEnd="20dp"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/underline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/standard_page_padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Zmiana hasła"
            android:textSize="@dimen/huge_btn_text_size"
            android:textColor="?attr/text_normal"/>
    </LinearLayout>
</LinearLayout>