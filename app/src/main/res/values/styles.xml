<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="si_su_et_row" parent="@android:style/Widget.EditText">
        <item name="android:minHeight">@dimen/et_min_height</item>
        <item name="android:textColor">?attr/text_normal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/rounded_white_rect</item>
        <item name="android:elevation">3dp</item>
        <item name="android:paddingHorizontal">8dp</item>
    </style>

    <style name="si_su_bt" parent="@android:style/Widget.Button">
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/rounded_white_rect</item>
        <item name="backgroundTint">@color/orange_peel</item>
        <item name="android:elevation">3dp</item>
    </style>
</resources>