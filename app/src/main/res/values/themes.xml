<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme0.Introduce_yourself" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_green</item>
        <item name="colorPrimaryVariant">@color/prussian_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/selective_yellow</item>
        <item name="colorSecondaryVariant">@color/tangerine</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>

        <item name="colorBackground">@color/white</item>
        <item name="main_background">?attr/colorBackground</item>
        <item name="main_item_background">?attr/colorBackground</item>
        <item name="user_item_background">?attr/colorBackground</item>

        <!-- Sign in and sign up activities -->
        <item name="si_su_bg_gradient1">@color/tiffany_blue</item>
        <item name="si_su_bg_gradient2">@color/light_cyan</item>
        <item name="si_su_icon">#2E2E2E</item>

        <item name="text_light">@color/davys_grey</item>
        <item name="text_normal">@color/eerie_black</item>
        <item name="icon_color">?attr/text_normal</item>
        <item name="nav_header">?attr/colorPrimary</item>
        <item name="underline">?attr/text_normal</item>
        <item name="android:listDivider">?attr/underline</item>
        <item name="toolbar">?attr/colorPrimary</item>
        <item name="user_picture_border">?attr/colorPrimaryVariant</item>
        <item name="post_like">@color/emerald</item>
        <item name="post_dislike">@color/fire_opal</item>
        <item name="publish_btn">?attr/colorSecondaryVariant</item>
        <item name="list_title_bg">?attr/colorSecondary</item>
    </style>

    <style name="Theme1.Introduce_yourself" parent="Theme0.Introduce_yourself">
        <item name="colorPrimary">@color/onyx</item>
        <item name="colorPrimaryVariant">@color/eerie_black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">?attr/colorPrimary</item>
        <item name="colorSecondaryVariant">?attr/colorPrimaryVariant</item>
        <item name="colorOnSecondary">?attr/colorOnPrimary</item>

        <item name="colorBackground">@color/davys_grey</item>

        <item name="text_light">@color/light_gray</item>
        <item name="text_normal">@color/gainsboro</item>
        <item name="user_picture_border">?attr/text_normal</item>
    </style>
</resources>