<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorBackground"
    tools:context=".Activities.UserQrActivity"
    tools:ignore="UseSwitchCompatOrMaterialXml">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_settings"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/toolbar"
        app:title="Ustawienia"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/CustomToolbarStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/standard_page_padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Wybór motywu"
            android:textSize="@dimen/huge_btn_text_size"
            android:textColor="?attr/text_normal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:id="@+id/set_theme0_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/theme0_choice_gradient"
                android:layout_marginEnd="20dp"/>

            <View
                android:id="@+id/set_theme1_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/theme1_choice_gradient"
                android:layout_marginEnd="20dp"/>

            <View
                android:id="@+id/set_theme2_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/theme2_choice_gradient"
                android:layout_marginEnd="20dp"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/underline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/standard_page_padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Zmiana hasła"
            android:textSize="@dimen/huge_btn_text_size"
            android:textColor="?attr/text_normal"/>

        <TextView
            android:id="@+id/settings_old_password_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wprowadź stare hasło" />

        <EditText
            android:id="@+id/settings_old_password_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Stare hasło" />

        <TextView
            android:id="@+id/settings_new_password_tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wprowadź nowe hasło" />

        <EditText
            android:id="@+id/settings_new_password_et1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Nowe hasło" />

        <TextView
            android:id="@+id/settings_new_password_tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Powtórz nowe hasło" />

        <EditText
            android:id="@+id/settings_new_password_et2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Nowe hasło" />

        <Button
            android:id="@+id/settings_update_password_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zaktualizuj" />
    </LinearLayout>
</LinearLayout>