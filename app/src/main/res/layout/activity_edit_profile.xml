<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.UserItemActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="Edytuj profil" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

           <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

               <ImageView
                   android:id="@+id/edit_profile_bg_picture"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_alignParentTop="true"
                   android:layout_centerHorizontal="true"
                   android:adjustViewBounds="true"
                   android:contentDescription="User background picture"
                   android:cropToPadding="true"
                   android:maxHeight="@dimen/user_item_bg_max_height"
                   android:scaleType="centerCrop"
                   android:src="@drawable/bg_gradient_2" />

               <ImageView
                   android:id="@+id/user_bg_picture_edit_btn"
                   android:layout_width="@dimen/user_edit_picture_icon_size"
                   android:layout_height="@dimen/user_edit_picture_icon_size"
                   android:layout_alignParentEnd="true"
                   android:layout_alignParentBottom="true"
                   android:background="@drawable/ic_baseline_circle_white_24"
                   android:contentDescription="User background picture edit"
                   android:src="@drawable/ic_outline_build_circle_24" />
<!--               TODO: Patryk change remove icon??-->

               <ImageView
                   android:id="@+id/user_bg_picture_remove_btn"
                   android:layout_width="@dimen/user_edit_picture_icon_size"
                   android:layout_height="@dimen/user_edit_picture_icon_size"
                   android:layout_alignParentBottom="true"
                   android:layout_marginEnd="0dp"
                   android:visibility="visible"
                   android:layout_toStartOf="@+id/user_bg_picture_edit_btn"
                   android:background="@drawable/ic_baseline_circle_white_24"
                   android:contentDescription="User background picture remove"
                   android:src="@drawable/ic_outline_remove_circle_outline_24" />

               <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/standard_page_padding" >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/edit_profile_user_picture"
                        android:layout_width="@dimen/user_item_profile_picture_size"
                        android:layout_height="@dimen/user_item_profile_picture_size"
                        android:contentDescription="Profile picture"
                        android:src="@drawable/add_screen_image_placeholder"
                        app:civ_border_color="@color/user_picture_border"
                        app:civ_border_width="@dimen/user_picture_border"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <ImageView
                        android:id="@+id/user_picture_edit_btn"
                        android:layout_width="@dimen/user_edit_picture_icon_size"
                        android:layout_height="@dimen/user_edit_picture_icon_size"
                        android:layout_margin="5dp"
                        android:background="@drawable/ic_baseline_circle_white_24"
                        android:contentDescription="User picture edit"
                        android:src="@drawable/ic_outline_build_circle_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/underline" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/standard_page_padding"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="@color/user_item_background">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="start"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/edit_profile_user_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:text="User Name mmmmmmmmmmmm mmmmmmmmmmmmmmmmmmmmm"
                            android:textColor="@color/text_dark"
                            android:textSize="@dimen/user_item_title_size"
                            android:visibility="visible" />

                        <EditText
                            android:id="@+id/edit_profile_user_name_et"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:text="User Name mmmmmmmmmmmm mmmmmmmmmmmmmmmmmmmmm"
                            android:textColor="@color/text_dark"
                            android:textSize="@dimen/user_item_title_size"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/user_edit_text_icon_size"
                        android:layout_weight="0">

                        <ImageView
                            android:id="@+id/user_name_edit_btn"
                            android:layout_width="@dimen/user_edit_text_icon_size"
                            android:layout_height="@dimen/user_edit_text_icon_size"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:contentDescription="User name edit button"
                            android:src="@drawable/ic_outline_edit_24"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/user_name_edit_save_btn"
                            android:layout_width="@dimen/user_edit_text_icon_size"
                            android:layout_height="@dimen/user_edit_text_icon_size"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:contentDescription="User name edit save button"
                            android:src="@drawable/ic_baseline_check_24"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/user_name_edit_abort_btn"
                            android:layout_width="@dimen/user_edit_text_icon_size"
                            android:layout_height="@dimen/user_edit_text_icon_size"
                            android:layout_toEndOf="@+id/user_name_edit_save_btn"
                            android:layout_alignParentTop="true"
                            android:contentDescription="User name edit abort button"
                            android:src="@drawable/ic_baseline_settings_backup_restore_24"
                            android:visibility="gone" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/user_item_line_spacing"
                    android:orientation="horizontal"
                    android:layout_gravity="start"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/edit_profile_user_surname_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:text="User Surname"
                            android:textColor="@color/text_dark"
                            android:textSize="@dimen/user_item_title_size"
                            android:visibility="visible" />

                        <EditText
                            android:id="@+id/edit_profile_user_surname_et"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:text="User Surname"
                            android:textColor="@color/text_dark"
                            android:textSize="@dimen/user_item_title_size"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/user_edit_text_icon_size"
                        android:layout_weight="0">

                        <ImageView
                            android:id="@+id/user_surname_edit_btn"
                            android:layout_width="@dimen/user_edit_text_icon_size"
                            android:layout_height="@dimen/user_edit_text_icon_size"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:contentDescription="User surname edit button"
                            android:src="@drawable/ic_outline_edit_24"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/user_surname_edit_save_btn"
                            android:layout_width="@dimen/user_edit_text_icon_size"
                            android:layout_height="@dimen/user_edit_text_icon_size"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:contentDescription="User surname edit save button"
                            android:src="@drawable/ic_baseline_check_24"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/user_surname_edit_abort_btn"
                            android:layout_width="@dimen/user_edit_text_icon_size"
                            android:layout_height="@dimen/user_edit_text_icon_size"
                            android:layout_toEndOf="@+id/user_surname_edit_save_btn"
                            android:layout_alignParentTop="true"
                            android:contentDescription="User surname edit abort button"
                            android:src="@drawable/ic_baseline_settings_backup_restore_24"
                            android:visibility="gone" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/user_item_line_spacing"
                    android:orientation="horizontal"
                    android:layout_gravity="start"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/edit_profile_user_email_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:text="user@email.com"
                            android:textColor="@color/text_dark"
                            android:textSize="@dimen/user_item_title_size"
                            android:visibility="visible" />

                        <EditText
                            android:id="@+id/edit_profile_user_email_et"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:text="User Surname"
                            android:textColor="@color/text_dark"
                            android:textSize="@dimen/user_item_title_size"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/user_edit_text_icon_size"
                        android:layout_weight="0">

                        <ImageView
                            android:id="@+id/user_email_edit_btn"
                            android:layout_width="@dimen/user_edit_text_icon_size"
                            android:layout_height="@dimen/user_edit_text_icon_size"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:contentDescription="User email edit button"
                            android:src="@drawable/ic_outline_edit_24"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/user_email_edit_save_btn"
                            android:layout_width="@dimen/user_edit_text_icon_size"
                            android:layout_height="@dimen/user_edit_text_icon_size"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:contentDescription="User email edit save button"
                            android:src="@drawable/ic_baseline_check_24"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/user_email_edit_abort_btn"
                            android:layout_width="@dimen/user_edit_text_icon_size"
                            android:layout_height="@dimen/user_edit_text_icon_size"
                            android:layout_toEndOf="@+id/user_email_edit_save_btn"
                            android:layout_alignParentTop="true"
                            android:contentDescription="User email edit abort button"
                            android:src="@drawable/ic_baseline_settings_backup_restore_24"
                            android:visibility="gone" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/underline" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/user_item_background"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/standard_page_padding">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/user_item_line_spacing"
                    android:orientation="horizontal"
                    android:layout_gravity="start"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/user_item_title_size"
                        android:text="@string/user_description_title"
                        android:textColor="@color/text_dark" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/user_edit_text_icon_size"
                        android:layout_weight="0">

                        <ImageView
                            android:id="@+id/user_description_edit_btn"
                            android:layout_width="@dimen/user_edit_text_icon_size"
                            android:layout_height="@dimen/user_edit_text_icon_size"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:contentDescription="User description edit button"
                            android:src="@drawable/ic_outline_edit_24"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/user_description_edit_save_btn"
                            android:layout_width="@dimen/user_edit_text_icon_size"
                            android:layout_height="@dimen/user_edit_text_icon_size"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:contentDescription="User description edit save button"
                            android:src="@drawable/ic_baseline_check_24"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/user_description_edit_abort_btn"
                            android:layout_width="@dimen/user_edit_text_icon_size"
                            android:layout_height="@dimen/user_edit_text_icon_size"
                            android:layout_toEndOf="@+id/user_description_edit_save_btn"
                            android:layout_alignParentTop="true"
                            android:contentDescription="User description edit abort button"
                            android:src="@drawable/ic_baseline_settings_backup_restore_24"
                            android:visibility="gone" />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/user_item_line_spacing">

                    <TextView
                        android:id="@+id/edit_profile_user_description_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:hint="Jeszcze nie dodałeś opisu!"
                        android:text="@string/user_description_sample"
                        android:textSize="@dimen/user_item_text_size"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/edit_profile_user_description_et"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:textSize="@dimen/user_item_text_size"
                        android:text="@string/user_description_sample"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/underline" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/standard_page_padding"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="@color/user_item_background">

                <!--                TODO: Patryk edit profile, expand post list-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="0dp"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/user_posts_title"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/user_item_text_size" />

                    <ImageView
                        android:id="@+id/edit_profile_posts_expand_less"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/ic_baseline_expand_less_24"
                        android:src="@drawable/ic_baseline_expand_less_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:visibility="gone"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
<!--                    TODO Patryk repair the alignment of image-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/edit_profile_post_picture"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:adjustViewBounds="true"
                            android:background="#000000"
                            android:cropToPadding="true"
                            android:maxHeight="@dimen/user_item_bg_max_height"
                            android:padding="1dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/add_screen_image_placeholder" />

                        <ImageView
                            android:id="@+id/user_post_picture_edit_btn"
                            android:layout_width="@dimen/user_edit_picture_icon_size"
                            android:layout_height="@dimen/user_edit_picture_icon_size"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/ic_baseline_circle_white_24"
                            android:src="@drawable/ic_outline_build_circle_24" />

                        <ImageView
                            android:id="@+id/user_post_picture_remove_btn"
                            android:layout_width="@dimen/user_edit_picture_icon_size"
                            android:layout_height="@dimen/user_edit_picture_icon_size"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="0dp"
                            android:layout_marginBottom="0dp"
                            android:visibility="gone"
                            android:layout_toStartOf="@+id/user_post_picture_edit_btn"
                            android:background="@drawable/ic_baseline_circle_white_24"
                            android:src="@drawable/ic_outline_delete_24" />

                    </RelativeLayout>
                    <EditText
                        android:id="@+id/edit_profile_add_post_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tytuł posta"
                        android:inputType="text" />

<!--                    <ImageView-->
<!--                        android:id="@+id/edit_profile_add_post_image"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:adjustViewBounds="true"-->
<!--                        android:contentDescription="Post image"-->
<!--                        android:maxHeight="@dimen/post_image_max_height"-->
<!--                        android:src="@drawable/add_screen_image_placeholder" />-->

                    <EditText
                        android:id="@+id/edit_profile_add_post_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Treść posta"
                        android:inputType="text"/>

                    <ImageView
                        android:id="@+id/edit_profile_add_post_btn"
                        android:layout_width="@dimen/user_edit_text_icon_size"
                        android:layout_height="@dimen/user_edit_text_icon_size"
                        android:src="@drawable/ic_baseline_add_24" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/edit_profile_posts_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/edit_profile_posts_expand_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/white"
                    app:strokeColor="@color/black"
                    app:strokeWidth="1dp"
                    android:visibility="visible"
                    android:text="Zobacz więcej" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/underline" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/standard_page_padding"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="@color/user_item_background">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="0dp"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/user_links_title"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/user_item_text_size" />

                    <ImageView
                        android:id="@+id/edit_profile_links_expand_less"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/ic_baseline_expand_less_24"
                        android:src="@drawable/ic_baseline_expand_less_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:visibility="gone"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edit_profile_add_link_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tytuł linka"
                        android:inputType="text" />

                    <EditText
                        android:id="@+id/edit_profile_add_link_url"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Link"
                        android:inputType="textUri" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">>

                        <ImageView
                            android:id="@+id/edit_profile_add_link_btn"
                            android:layout_width="@dimen/user_edit_text_icon_size"
                            android:layout_height="@dimen/user_edit_text_icon_size"
                            android:src="@drawable/ic_baseline_add_24" />
                        <ImageView
                            android:id="@+id/edit_profile_remove_link_btn"
                            android:layout_width="@dimen/user_edit_text_icon_size"
                            android:layout_height="@dimen/user_edit_text_icon_size"
                            android:src="@drawable/ic_outline_delete_24" />
                        <ImageView
                            android:id="@+id/edit_profile_remove_link_abort_btn"
                            android:layout_width="@dimen/user_edit_text_icon_size"
                            android:layout_height="@dimen/user_edit_text_icon_size"
                            android:src="@drawable/ic_baseline_check_24"
                            android:visibility="gone"/>
                    </LinearLayout>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/edit_profile_links_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/edit_profile_links_expand_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/white"
                    app:strokeColor="@color/black"
                    app:strokeWidth="1dp"
                    android:text="Zobacz więcej" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>